{
  "name": "@tynor/precis",
  "version": "0.1.0",
  "description": "Implementation of PRECIS (RFC8264, RFC8265)",
  "license": "MIT",
  "main": "./dist/cjs",
  "module": "./dist/mjs",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "./script/build.sh",
    "test": "TS_NODE_PROJECT=tsconfig.ava.json ava",
    "fmt": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^16.3.1",
    "ava": "^3.15.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "ava": {
    "files": [
      "**/__tests__/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
